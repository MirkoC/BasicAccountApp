<div class="col-sm-4 center-block">
  <%= form_for @user_session, url: user_sessions_path, method: :post do |f| %>
      <% if @user_session.errors.any? %>
          <div class="alert alert-danger text-center" id="flash">
            <b><%= pluralize(@user_session.errors.count, 'error') %> prohibited this user from being saved:</b>
            <ul class="center">
              <% @user_session.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <h4>Login</h4>
      <div class="form-group">
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username or email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="actions">
        <%= f.submit 'Login', class: 'btn btn-primary btn-sm pull-right' %>
        <%= link_to 'Register account', register_path, class: 'btn btn-link pull-right' %>
        <%= link_to 'Forgot your password?', new_password_reset_url, class: 'btn btn-link pull-right'%>
        <%= f.check_box :remember_me, class: 'checkbox-inline pull-left', style: 'margin-top:11px;' %>
        <%= f.label :remember_me, class: 'label label-primary pull-left', style: 'margin-left:5px; margin-top:9px;' %>
      </div>
  <% end %>
</div>
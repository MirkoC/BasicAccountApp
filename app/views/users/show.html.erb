<div class="col-sm-4">
  <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice]%></div>
  <% end %>
  <% if flash[:error] %>
      <div class="alert alert-danger"><%= flash[:error]%></div>
  <% end %>
  <table class="table table-hover">
    <tr>
      <th>Username</th>
      <td><%= best_in_place @user, :username, as: :input, class: 'hvr-underline-from-center'%></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= best_in_place @user, :email, as: :input, class: 'hvr-underline-from-center'%></td>
    </tr>
    <tr>
      <th>Full name</th>
      <td><%= best_in_place_if @user.full_name, @user, :full_name, as: :input, class: 'hvr-underline-from-center'%></td>
    </tr>
  </table>
</div>



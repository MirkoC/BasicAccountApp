<div class="col-sm-3 center-block text-center">
  <%= form_for @user, url: {controller: 'users', action: 'change_password'}, method: :put do |f| %>
      <h4>Change password</h4>
      <% if @user.errors.any? %>
          <div class="alert alert-danger" id="flash">
            <b><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</b>
            <ul class="center">
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'New password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm new password' %>
      </div>
      <div class="actions">
        <%= f.submit 'Change', class: 'btn btn-primary btn-sm pull-left' %>
      </div>
  <% end %>
</div>